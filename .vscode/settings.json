{
    "python.testing.pytestArgs": [
        "tests",
        "tests/unit"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "pytest",
    "python.formatting.provider": "black",
    "python.pythonPath": "${env:HOME}/.pyenv/versions/3.10.0/bin/python",
    "python.formatting.blackArgs": [
        "-l",
        "100"
    ],
    "python.analysis.extraPaths": [
        "bazel-cotd-telegram-bot/external/python_runtime_deps/pypi__python_telegram_bot",
        "bazel-cotd-telegram-bot/external/python_runtime_deps/pypi__pillow",
        "bazel-cotd-telegram-bot/external/python_runtime_deps/pypi__ratelimit",
        "bazel-cotd-telegram-bot/external/python_test_deps/pypi__pytest",
        "bazel-cotd-telegram-bot/external/python_test_deps/pypi__pyfakefs",
    ],
    "python.analysis.cacheFolderPath": "${workspaceFolder}/.pyanalysis",
    "python.analysis.diagnosticMode": "openFilesOnly",
    "bazel.buildifierFixOnFormat": true,
    "bazel.enableCodeLens": true,
}